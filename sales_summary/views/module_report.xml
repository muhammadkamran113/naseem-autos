<?xml version="1.0" encoding="utf-8"?>
<openerp>

    <data>   

        <template id="sales_summary_report">

            <t t-call="report.html_container">

                <t t-call="report.external_layout">
                
                        <div class="page">
    
                            <style>
                                .container{
                                    width: 100%;
                                    margin: 0px auto;
                                }
                                .center-container{
                                    width: 1000px;
                                    margin: 0px auto;
                                }
                                .heading{
                                    width: 1000px;
                                    margin: 0px auto
                                }
                                .heading h3{
                                    text-align: center;
                                    margin: 0px;
                                    font-size: 22px;
                                }
                                .heading p{
                                    text-align: center;
                                    margin: 0px;
                                }           
                                .head-info {
                                    width: 100%;
                                    float: left;
                                    margin: 10px 0px;
                                }
                                .info-col-01,
                                .info-col-02 {
                                    width: 50%;
                                    float: left;
                                }
                                .info-col-02 {
                                    text-align: right;
                                }
                                .head-info p {
                                    width: 50%;
                                    float: left;
                                    margin: 5px 0px;
                                    font-size: 14px;
                                }
                                .head-info p span.solid {
                                    font-weight: 700;
                                }
                                .info-col-02 p {
                                    width: 100%;
                                    float: none;
                                }
                                table {
                                    width: 100%;
                                    border-spacing: 0px;
                                }
                                table tr th {
                                    text-align: left;
                                    border-bottom: 2px solid #666;
                                    padding: 5px 0px;
                                    font-size: 15px;
                                    text-transform: capitalize;
                                }
                                table tr td {
                                    text-align: left;
                                    padding: 5px 0px;
                                    font-size: 15px;
                                    text-transform: capitalize;
                                }
                                .stock {
                                    width: 100%;
                                    float: left;
                                    text-align: right;
                                    margin-top: 15px;
                                }
                                .stock p {
                                    font-size: 15px;
                                    margin: 10px 0px;
                                }
                                .stock p span.solid {
                                    font-weight: bold;
                                    display: inline-block;
                                    width: 160px;
                                }
                                .stock p span.liquid {
                                    display: inline-block;
                                    width: 75px;
                                }
                                .product_info {
                                    width: 100%;
                                    float: left;
                                    border-top: 1px solid #000;
                                    padding: 5px 0px;
                                    margin: 0px 0px 10px;
                                }
                                .product_info p {
                                    width: 50%;
                                    float: left;
                                    margin: 3px 0px;
                                }
                                .product_info p.lefter {
                                    text-align: left;
                                }
                                .product_info p.righter {
                                    text-align: right;
                                }
                                .product_info p.fuller {
                                    text-align: right;
                                    width: 100%;
                                }
                                
                            </style>

                            <div class="container">
                                <div class="center-container">

                                    <div class="heading">
                                        <h3>CAR ACCESORIES</h3>
                                        <p>Sales Satement</p>
                                    </div>
                                    
                                    <div class="head-info">

                                        <div class="info-col-01">

                                            <p>
                                                <span class="solid">Date From:</span>
                                                <span class="liquid" t-esc="form"></span>
                                            </p>

                                            <p>
                                                <span class="solid">To:</span> 
                                                <span class="liquid" t-esc="to"></span>
                                            </p>
                                        </div>

                                        <div class="info-col-02">

                                            <p>
                                                <span class="solid">Date:</span> 
                                                <span class="liquid" t-esc="date"></span>
                                            </p>

                                            <p>
                                                <span class="solid">Time:</span> 
                                                <span class="liquid" t-esc="timed"></span>
                                            </p>
                                        </div>
                                    </div>
                                    <br class="clearfloat" />
                                    
                                    <table>
                                        <tr>
                                            <th>InvDate</th>
                                            <th>CashSale</th>
                                            <th>Cr.CardSale</th>
                                            <th>CreditSale</th>
                                            <th>TotalSale</th>
                                            <th>Cash</th>
                                            <th>Bank </th>
                                            <th>Total</th>
                                            <th>Remarks</th>
                                        </tr>
                                        <tr>
                                            <td><span t-esc="to"></span></td>
                                            <td>
                                                <span t-esc="cashsale()"></span>
                                                <t t-set="cash" t-value="cashsale()" />
                                            </td>
                                            <td>0</td>
                                            <td>
                                                <span t-esc="creditsale()"></span>
                                                <t t-set="credit" t-value="creditsale()" />
                                            </td>
                                            <td>
                                                <span t-esc="cash + credit"></span></td>
                                                <t t-set="total_sale" t-value="cash + credit" />
                                            <td>
                                                <span t-esc="cashpay()"></span></td>
                                                <t t-set="cashpay" t-value="cashpay()" />
                                            <td>
                                                <span t-esc="bankpay()"></span></td>
                                                <t t-set="bankpay" t-value="bankpay()" />
                                            <td>
                                                <span t-esc="cashpay + bankpay"></span>
                                                <t t-set="total_payment" t-value="cashpay + bankpay" />
                                            </td>
                                            <td>
                                                <span t-esc="total_sale - total_payment "></span>
                                            </td>
                                        </tr>
                                    </table>    

                                </div>
                            </div>

                        </div><!--end of page -->

                </t>
                
            </t>

        </template>

    </data>

</openerp>